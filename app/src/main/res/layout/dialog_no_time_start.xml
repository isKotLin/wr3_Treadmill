<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@mipmap/start_bj"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/my440dp"
        android:layout_height="@dimen/my330dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/my20dp">

        <TextView
            android:id="@+id/start_tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my20dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my34dp" />

        <TextView
            android:id="@+id/start_tv_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/start_rl_run"
        android:layout_width="@dimen/my130dp"
        android:layout_height="match_parent"
        android:background="@mipmap/time_bj">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/my10dp"
            android:drawableTop="@mipmap/start"
            android:gravity="center"
            android:paddingBottom="@dimen/my10dp"
            android:text="@string/start"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />
    </RelativeLayout>
</LinearLayout>