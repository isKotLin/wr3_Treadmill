<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/app_ll_item"
        android:layout_width="@dimen/my180dp"
        android:layout_height="@dimen/my180dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/apps_iv_icon"
            android:layout_width="@dimen/my70dp"
            android:layout_height="@dimen/my70dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/my10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/apps_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />
    </LinearLayout>
</LinearLayout>