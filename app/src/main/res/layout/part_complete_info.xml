    <TextView
        android:id="@+id/info_tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_rg_sex"
        android:layout_marginTop="@dimen/my60dp"
        android:text="@string/stature"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my30dp" />

    <EditText
        android:id="@+id/info_et_height"
        android:layout_width="@dimen/my300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_rg_sex"
        android:layout_marginLeft="@dimen/my40dp"
        android:layout_marginTop="@dimen/my55dp"
        android:layout_toRightOf="@id/info_tv_height"
        android:background="@mipmap/frame"
        android:inputType="number"
        android:maxLength="3"
        android:padding="@dimen/my10dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/info_et_height"
        android:layout_alignRight="@id/info_et_height"
        android:layout_marginBottom="@dimen/my10dp"
        android:layout_marginRight="@dimen/my10dp"
        android:text="@string/cm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my30dp" />

    <TextView
        android:id="@+id/info_tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_et_height"
        android:layout_marginTop="@dimen/my60dp"
        android:text="@string/weight"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my30dp" />

    <EditText
        android:id="@+id/info_et_weight"
        android:layout_width="@dimen/my300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_et_height"
        android:layout_marginLeft="@dimen/my40dp"
        android:layout_marginTop="@dimen/my55dp"
        android:layout_toRightOf="@id/info_tv_weight"
        android:background="@mipmap/frame"
        android:inputType="number"
        android:maxLength="3"
        android:padding="@dimen/my10dp"
        android:textColor="@android:color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/info_et_weight"
        android:layout_alignRight="@id/info_et_weight"
        android:layout_marginBottom="@dimen/my10dp"
        android:layout_marginRight="@dimen/my10dp"
        android:text="@string/kg"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my30dp" />
