<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my80dp"
    android:layout_marginTop="@dimen/my80dp">



    <TextView
        android:id="@+id/info_tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my10dp"
        android:text="@string/sex"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my30dp" />

    <RadioGroup
        android:id="@+id/info_rg_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my80dp"
        android:layout_toRightOf="@id/info_tv_sex"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/info_rt_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/selector_complete_info"
            android:drawablePadding="@dimen/my20dp"
            android:text="@string/male"
            android:checked="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my30dp" />

        <RadioButton
            android:id="@+id/info_rt_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my40dp"
            android:button="@null"
            android:drawableLeft="@drawable/selector_complete_info"
            android:drawablePadding="@dimen/my20dp"
            android:text="@string/female"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my30dp" />
    </RadioGroup>

