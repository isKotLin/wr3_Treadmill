<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/my720dp"
        android:layout_height="@dimen/my450dp"
        android:layout_centerInParent="true"
        android:background="@color/bj">

        <TextView
            android:id="@+id/age_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my70dp"
            android:layout_marginTop="@dimen/my20dp"
            android:text="@string/age"
            android:textColor="@color/heart_text"
            android:textSize="@dimen/my28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/age_sign"
            android:layout_centerHorizontal="true"
            android:text="@string/targer_heart"
            android:textColor="@color/heart_text"
            android:textSize="@dimen/my28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/age_sign"
            android:layout_marginRight="@dimen/my70dp"
            android:text="@string/time"
            android:textColor="@color/heart_text"
            android:textSize="@dimen/my28dp" />

        <View
            android:id="@+id/tops_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my2dp"
            android:layout_below="@id/age_sign"
            android:layout_marginTop="@dimen/my10dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/time_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/my20dp"
            android:layout_marginLeft="@dimen/my84dp"
            android:text="@string/sui"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/time_units"
            android:layout_marginLeft="@dimen/my345dp"
            android:text="@string/bpm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/time_units"
            android:layout_marginRight="@dimen/my72dp"
            android:text="@string/min"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <View
            android:id="@+id/bottoms_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my2dp"
            android:layout_above="@id/time_units"
            android:layout_marginBottom="@dimen/my20dp"
            android:background="@color/line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/my50dp"
            android:background="@mipmap/number_frame"
            android:layout_marginTop="@dimen/my190dp"/>

        <wheel.LoopView
            android:id="@+id/age_ps"
            android:layout_width="@dimen/my80dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottoms_sign"
            android:layout_below="@id/tops_sign"
            android:layout_marginLeft="@dimen/my35dp" />
        <!--android:layout_marginTop="@dimen/my70dp"-->

        <wheel.LoopView
            android:id="@+id/heart_ps"
            android:layout_width="@dimen/my80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/age_ps"
            android:layout_alignTop="@id/age_ps"
            android:layout_marginLeft="@dimen/my280dp"
            />

        <wheel.LoopView
            android:id="@+id/time_ps"
            android:layout_width="@dimen/my90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/age_ps"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/age_ps"
            android:layout_marginRight="@dimen/my15dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/heart_tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/my50dp"
        android:drawablePadding="@dimen/my6dp"
        android:drawableTop="@mipmap/affirm"
        android:text="@string/start"
        android:textColor="@android:color/white"
        android:textSize="@dimen/my24dp" />
</RelativeLayout>