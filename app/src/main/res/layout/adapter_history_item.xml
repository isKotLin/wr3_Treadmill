<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/my15dp">

    <LinearLayout
        android:id="@+id/history_ll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/history_tv_data"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:id="@+id/history_tv_time"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:id="@+id/history_tv_pace"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:id="@+id/history_tv_distance"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:id="@+id/history_tv_kaluli"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <TextView
            android:id="@+id/history_tv_heart"
            android:layout_width="@dimen/my0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />
    </LinearLayout>

    <View
        android:id="@+id/line_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my1dp"
        android:background="@color/heart_text" />
</LinearLayout>