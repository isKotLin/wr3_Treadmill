<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vigorchip.treadmill.view.AppViewPager
        android:id="@+id/app_vvp"
        android:layout_marginTop="@dimen/my45dp"
        android:layout_marginLeft="@dimen/my90dp"
        android:overScrollMode="never"
        android:layout_width="@dimen/my900dp"
        android:layout_height="@dimen/my500dp" />

    <LinearLayout
        android:id="@+id/app_ll_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" />
</RelativeLayout>