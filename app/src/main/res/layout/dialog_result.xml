<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/my60dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/my800dp"
        android:layout_height="@dimen/my50dp"
        android:background="@android:color/holo_red_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sport_result"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <ImageView
            android:id="@+id/result_tv_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/my20dp"
            android:paddingTop="@dimen/my10dp"
            android:paddingLeft="@dimen/my20dp"
            android:paddingBottom="@dimen/my10dp"
            android:src="@mipmap/close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/my800dp"
        android:layout_height="@dimen/my350dp"
        android:background="@mipmap/result_bj">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my50dp"
            android:layout_marginTop="@dimen/my50dp"
            android:text="@string/aaa"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my24dp" />

        <RelativeLayout
            android:id="@+id/result_rl_mileages"
            android:layout_width="@dimen/my250dp"
            android:layout_height="@dimen/my220dp"
            android:layout_marginLeft="@dimen/my30dp"
            android:layout_marginTop="@dimen/my100dp"
            android:background="@mipmap/result_mileage">

            <TextView
                android:id="@+id/result_tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/my50dp"
                android:text="66.6"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/my60dp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/result_tv_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my80dp"
            android:layout_marginTop="@dimen/my50dp"
            android:layout_toRightOf="@id/result_rl_mileages"
            android:src="@mipmap/result_time" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_icon"
            android:layout_marginTop="@dimen/my110dp"
            android:src="@mipmap/result_heat" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_icon"
            android:layout_marginTop="@dimen/my170dp"
            android:src="@mipmap/result_heart" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_icon"
            android:layout_marginTop="@dimen/my230dp"
            android:src="@mipmap/result_speed" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_icon"
            android:layout_marginTop="@dimen/my290dp"
            android:src="@mipmap/result_minkm" />

        <TextView
            android:id="@+id/result_tv_time_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_marginTop="@dimen/my50dp"
            android:layout_toRightOf="@id/result_tv_time_icon"
            android:text="@string/sport_time"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_sign"
            android:layout_marginTop="@dimen/my110dp"
            android:text="@string/heat"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_sign"
            android:layout_marginTop="@dimen/my170dp"
            android:text="@string/avg_heart"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:id="@+id/result_tv_speed_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_sign"
            android:layout_marginTop="@dimen/my230dp"
            android:text="@string/avg_speed"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/result_tv_time_sign"
            android:layout_marginTop="@dimen/my290dp"
            android:text="@string/pace"
            android:textColor="@android:color/white"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:id="@+id/result_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_marginTop="@dimen/my50dp"
            android:layout_toRightOf="@id/result_tv_speed_sign"
            android:textColor="@color/sport_time"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:id="@+id/result_tv_heat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_marginTop="@dimen/my110dp"
            android:layout_toRightOf="@id/result_tv_speed_sign"
            android:textColor="@color/heat"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:id="@+id/result_tv_avg_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_marginTop="@dimen/my170dp"
            android:layout_toRightOf="@id/result_tv_speed_sign"
            android:textColor="@color/avg_heart"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:id="@+id/result_tv_avg_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_marginTop="@dimen/my230dp"
            android:layout_toRightOf="@id/result_tv_speed_sign"
            android:textColor="@color/avg_speed"
            android:textSize="@dimen/my20dp" />

        <TextView
            android:id="@+id/result_tv_pack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my10dp"
            android:layout_marginTop="@dimen/my290dp"
            android:layout_toRightOf="@id/result_tv_speed_sign"
            android:textColor="@color/pace"
            android:textSize="@dimen/my20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/my20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_QRCodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/result_tv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my10dp"
                android:text="@string/scan"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my28dp" />

            <TextView
                android:id="@+id/result_tv_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my5dp"
                android:text="@string/share"
                android:textColor="@android:color/white"
                android:textSize="@dimen/my28dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>